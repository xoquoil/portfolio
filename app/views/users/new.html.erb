<% content_for(:title, '新規登録') %>

<div class="container pt-5">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto w-50">
      <h3>ユーザー登録</h3>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="my-3">
          <%= f.text_field :name, class: "form-control", placeholder: 'ユーザー名' %>
        </div>
        <div class="mb-3">
          <%= f.email_field :email, class: "form-control", placeholder: 'メールアドレス' %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: 'パスワード' %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: 'パスワード確認' %>
        </div>
        <%= f.submit "登録", class: "btn btn-primary" %>
      <% end %>
      <div class='text-center'>
        <%= link_to 'ログインページへ', login_path %>
      </div>
    </div>
  </div>
</div>