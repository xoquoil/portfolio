<% content_for(:title, '投稿一覧') %>

<div class="container-fluid">
  <div class="row mx-1">
    <div class="col-4 mt-4">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="myposts-tab" data-bs-toggle="tab" data-bs-target="#myposts" type="button" role="tab" aria-controls="myposts" aria-selected="true">投稿</button>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="myposts" role="tabpanel" aria-labelledby="myposts-tab">
          <% if @posts.empty? %>
            <p>投稿がありません</p>
          <% else %>
            <div class = 'border-start border-end index-container'>
              <% @posts.each do |post| %>
                <%= render post %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-8 p-0 mt-4">
      <div id = 'js-mapheader'>
        <%= render 'posts/mapheader', post: @post %>
      </div>
      <%= render 'map', { post: @post} %>
    </div>
  </div>
</div>